                    "type": "string"
                }
            }
        },
        "schemes.TurnOutput": {
            "type": "object",
            "properties": {
                "completion_date": {
                    "type": "string"
                },
                "creation_date": {
                    "type": "string"
                },
                "customer": {
                    "type": "string"
                },
                "formation_date": {
                    "type": "string"
                },
                "moderator": {
                    "type": "string"
                },
                "sending_status": {
                    "type": "string"
                },
                "status": {
                    "type": "string"
                },
                "takefood": {
                    "type": "integer"
                },
                "turn_type": {
                    "type": "string"
                },
                "uuid": {
                    "type": "string"
                }
            }
        },
        "schemes.TurnResponse": {
            "type": "object",
            "properties": {
                "cards": {
                    "type": "array",
                    "items": {
